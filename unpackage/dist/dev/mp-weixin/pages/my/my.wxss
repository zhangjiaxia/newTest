page {
  background: #F6F6F6;
}
.chat {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  opacity: 0;
}
.userinfo {
  height: 220rpx;
  background: #F43D4D;
  color: white;
}
.userinfo .head {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 4rpx solid white;
}
.ordermanage {
  font-size: 30rpx;
  color: #333333;
}
.enter {
  width: 17rpx;
  height: 26rpx;
}
.order .title {
  background: white;
  height: 80rpx;
  border-bottom: 2rpx solid #EEEEEE;
  padding: 0 30rpx;
}
.order .status {
  background: white;
  height: 150rpx;
  margin: 20rpx 0;
}
.order .status .status-text {
    color: #333333;
    font-size: 24rpx;
}
.service {
  background: white;
}
.service .bar {
    position: relative;
    height: 100rpx;
    border-bottom: 2rpx solid #EEEEEE;
}
.service .bar .bigenter {
      width: 17rpx;
      height: 31rpx;
      margin-right: 30rpx;
}
.service .bar .concact {
      position: absolute;
      width: 100%;
      height: 110rpx;
      top: 0;
      opacity: 0;
}
.service .my {
    font-size: 30rpx;
    color: #333333;
    margin-left: 30rpx;
